---
layout: layouts/base.njk
showSidebar: true
---

{# Chapter layout - extends base with sidebar navigation #}

{{ content | safe }}

{# Chapter-specific task summary #}
{% if chapterTasks and chapterTasks.length > 0 %}
<section class="mt-12 pt-8 border-t border-border">
  <h2 class="text-2xl font-bold mb-4">Tareas de este capitulo</h2>
  <ul class="space-y-2">
    {% for task in chapterTasks %}
    <li class="flex items-start">
      <span class="inline-block w-6 h-6 mr-2 text-homework">[T]</span>
      <div>
        <a href="{{ task.url | url }}" class="text-accent hover:text-accent-hover font-medium">{{ task.title }}</a>
        {% if task.due %}
        <span class="text-text-muted text-sm ml-2">Fecha limite: {{ task.due | formatDate }}</span>
        {% endif %}
      </div>
    </li>
    {% endfor %}
  </ul>
</section>
{% endif %}
